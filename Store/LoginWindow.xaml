<Window x:Class="Store.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Label Content="MovieHUB" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="1" FontSize="50"/>
        <Label Content="Enter Your Name" HorizontalAlignment="Center" Margin="0,146,0,0" VerticalAlignment="Top"/>
        <TextBox Name="NameField" HorizontalAlignment="Center" Margin="0,184,0,0" Text="..." TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Click="LogIn_Click" Content="Log In" HorizontalAlignment="Left" Margin="350,231,0,0" VerticalAlignment="Top"/>
        <Button Click ="Register_Click" Content="Register" HorizontalAlignment="Left" Margin="400,231,0,0" VerticalAlignment="Top" Width="50" Height="20"/>
    </Grid>
</Window>
