<Window x:Class="Store.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store"
        mc:Ignorable="d"
        Title="ChangePasswordWindow" Height="450" Width="800">
    <Grid>
        <Label Content="New Password" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="229,55,0,0" FontSize="50" FontFamily="Bauhaus 93"/>
        <Label Content="Old Password" HorizontalAlignment="Left" Margin="229,176,0,0" VerticalAlignment="Top" Height="44" Width="107" FontSize="15"/>
        <Label Content="New Password" HorizontalAlignment="Left" Margin="229,212,0,0" VerticalAlignment="Top" Height="40" Width="107" FontSize="15"/>
        <PasswordBox Name="OldPasswordBox" HorizontalAlignment="Left" Margin="341,176,0,0" Password="Password" VerticalAlignment="Top" Width="128" Height="31"  PasswordChar="*" PreviewMouseLeftButtonDown="ExistingPasswordBoxClick"/>
        <PasswordBox Name="NewPasswordBox" HorizontalAlignment="Left" Margin="341,212,0,0" Password="Password"  VerticalAlignment="Top" Width="128" Height="27" PasswordChar="*" PreviewMouseLeftButtonDown="NewPasswordBoxClick1"/>
       <Button Content="Change Password" Click="NewPasswordButton" HorizontalAlignment="Center" Height="36" Margin="0,252,0,0" VerticalAlignment="Top" Width="128"/> 
    </Grid>
</Window>
