<Window x:Class="Store.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store"
        mc:Ignorable="d"
        Title="Register" Height="450" Width="800" WindowStyle="SingleBorderWindow" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Register" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="312,39,0,0" FontSize="50" Width="204" FontFamily="Bahnschrift"/>
        <TextBlock Height="24" HorizontalAlignment="Left" Margin="228,131,0,0" Text="First Name:" VerticalAlignment="Top" Width="110" />
        <TextBlock Height="24" HorizontalAlignment="Left" Margin="228,159,0,0" Text="Password:" VerticalAlignment="Top" Width="110" />
        <TextBlock Height="24" HorizontalAlignment="Left" Margin="228,188,0,0" Text="Username:" VerticalAlignment="Top" Width="110" />
        <TextBlock Height="24" HorizontalAlignment="Left" Margin="228,217,0,0" Text="Email" VerticalAlignment="Top" Width="110" />
        <!--Textboxes-->
        <TextBox  Name="FirstName" Height="24" HorizontalAlignment="Left" Margin="303,131,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="222" />
        <PasswordBox Name="PasswordField" Height="24" HorizontalAlignment="Left" Margin="303,159,0,0" VerticalAlignment="Top" Width="222" />
        <TextBox Name="UserName" Height="24" HorizontalAlignment="Left" Margin="303,188,0,0"  TextWrapping="Wrap"  VerticalAlignment="Top" Width="222" />
        <TextBox Name="Email" Height="24" HorizontalAlignment="Left" Margin="303,217,0,0"  TextWrapping="Wrap"  VerticalAlignment="Top" Width="222" />
        <!--Buttons-->
        <Button Click="Submit_Click" Content="Submit" Height="24" HorizontalAlignment="Left" Margin="330,264,0,0" VerticalAlignment="Top" Width="70"/>
        <Button  Click="Cancel_Click" Content="Cancel" Height="24" HorizontalAlignment="Right" Margin="0,264,305,0"  VerticalAlignment="Top" Width="70"/>

    </Grid>


</Window>
